<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_blue"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_logo_comics_splash"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_comics_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.450" />

    <Space
        android:id="@+id/space1_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="12dp"

        app:layout_constraintBottom_toTopOf="@id/iv_logo_comics_splash"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo_comics_splash"
        app:layout_constraintRight_toRightOf="@id/iv_logo_comics_splash"
        />

    <TextView
        android:id="@+id/tv_mycomics_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyManga"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/monsterrat_medium"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/space1_splash"
        />

    <TextView
        android:id="@+id/tv_slogan_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Find your favorite mangas here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/monsterrat_light"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_comics_splash"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_comics_splash"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_comics_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>